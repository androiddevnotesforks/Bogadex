<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_boardgame">

    <fragment
        android:id="@id/navigation_boardgame"
        android:name="fr.boitakub.bogadex.boardgame.ui.BoardGameCollectionFragment"
        android:label="@string/title_home"
        tools:layout="@layout/common_list_fragment">
        <argument
            android:name="filter"
            app:argType="string"
            android:defaultValue="all" />
    </fragment>

    <fragment
        android:id="@id/navigation_collection"
        android:name="fr.boitakub.bogadex.boardgame.ui.BoardGameCollectionFragment"
        android:label="@string/title_collection"
        tools:layout="@layout/common_list_fragment">
        <argument
            android:name="filter"
            app:argType="string"
            android:defaultValue="collection" />
    </fragment>

    <fragment
        android:id="@id/navigation_wishlist"
        android:name="fr.boitakub.bogadex.boardgame.ui.BoardGameCollectionFragment"
        android:label="@string/title_wishlist"
        tools:layout="@layout/common_list_fragment">
        <argument
            android:name="filter"
            app:argType="string"
            android:defaultValue="wishlist" />
    </fragment>

    <fragment
        android:id="@id/navigation_boardgame_details"
        android:name="fr.boitakub.bogadex.boardgame.ui.BoardGameDetailFragment"
        android:label="{title}"
        tools:layout="@layout/common_list_fragment">
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>

</navigation>
